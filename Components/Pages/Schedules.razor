@page "/schedules"
@inject IMovieService MovieService
@rendermode InteractiveServer

<PageTitle>Today's Movie Schedules</PageTitle>

<div class="schedule-page">
    <div class="schedule-controls">
        <div class="search-bar">
            <input placeholder="Search title, description or crew..." @oninput="OnSearchInput" value="@searchQuery" />
        </div>

        @if (badgeOptions.Any())
        {
            <div class="badge-filter-container">
                @foreach (var option in badgeOptions)
                {
                    <label class="badge-filter">
                        <input type="checkbox"
                               checked="@activeBadgeCodes.Contains(option.Code)"
                               @onchange="e => OnBadgeToggle(option.Code, e)" />
                        <span>@option.Label</span>
                    </label>
                }
            </div>
        }
    </div>

    @if (schedules == null)
    {
        <p>Loading schedules...</p>
    }
    else if (!schedules.Any())
    {
        <p>No movie schedules found for today.</p>
    }
    else
    {
        <div class="schedule-grid">
            @foreach (var schedule in schedules)
            {
                var movie = LookupMovie(schedule.MovieId);
                <div class="schedule-card">
                    <div class="card-main" role="button" tabindex="0" @onclick="() => HandleScheduleActivation(schedule.MovieId)" @onkeydown="e => OnCardKeyDown(e, schedule.MovieId)">
                        <div class="card-cover">
                            @if (!string.IsNullOrWhiteSpace(movie?.CoverUrl))
                            {
                                <img src="@movie.CoverUrl" alt="@schedule.MovieTitle" loading="lazy" />
                            }
                            else
                            {
                                <div class="cover-fallback">@BuildFallbackLabel(schedule.MovieTitle)</div>
                            }
                        </div>
                        <div class="card-title">@schedule.MovieTitle</div>
                    </div>
                </div>
            }
        </div>

        @if (selectedSchedule != null)
        {
            <div class="schedule-modal-overlay" @onclick="CloseScheduleModal">
                <div class="schedule-modal" @onclick:stopPropagation="true">
                    <button class="schedule-modal-close" type="button" @onclick="CloseScheduleModal" aria-label="Close schedule details">Ã—</button>
                    <div class="schedule-modal-header">
                        <div class="schedule-modal-title">@selectedSchedule.MovieTitle</div>
                        @if (selectedMovie?.OriginCountries.Count > 0)
                        {
                            <div class="detail-origin">Origin: @string.Join(", ", selectedMovie.OriginCountries)</div>
                        }
                    </div>

                    @if (!string.IsNullOrWhiteSpace(selectedMovie?.BackdropUrl))
                    {
                        <div class="schedule-modal-backdrop detail-backdrop" style="@BuildBackdropStyle(selectedMovie)"></div>
                    }

                    @if (!string.IsNullOrWhiteSpace(selectedMovie?.Synopsis))
                    {
                        <p class="detail-description">@selectedMovie.Synopsis</p>
                    }

                    <div class="schedule-modal-performances detail-performances">
                        @foreach (var performance in selectedSchedule.Performances)
                        {
                            <div class="detail-venue">
                                <div class="venue-header">
                                    @if (performance.Venue != null)
                                    {
                                        <div class="venue-name">
                                            @if (!string.IsNullOrWhiteSpace(performance.Venue.DetailUrl))
                                            {
                                                <a href="@performance.Venue.DetailUrl" target="_blank" rel="noopener noreferrer">@performance.Venue.Name</a>
                                            }
                                            else
                                            {
                                                @performance.Venue.Name
                                            }
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(performance.Venue.MapUrl))
                                        {
                                            <a class="venue-map" href="@performance.Venue.MapUrl" target="_blank" rel="noopener noreferrer">@performance.Venue.Address</a>
                                        }
                                    }
                                    else
                                    {
                                        <div class="venue-name">Venue @performance.VenueId</div>
                                    }
                                </div>

                                <div class="showtime-list">
                                    @foreach (var showtime in performance.Showtimes)
                                    {
                                        <div class="showtime-item">
                                            <span class="showtime-time">@showtime.StartAt.ToLocalTime().ToString("HH:mm")</span>
                                            @if (showtime.TicketsAvailable)
                                            {
                                                <span class="showtime-status available">Tickets available</span>
                                                @if (!string.IsNullOrEmpty(showtime.TicketUrl))
                                                {
                                                    <a class="showtime-link" href="@showtime.TicketUrl" target="_blank" rel="noopener noreferrer">Buy Tickets</a>
                                                }
                                            }
                                            else
                                            {
                                                <span class="showtime-status soldout">Sold out</span>
                                            }

                                            @if (showtime.Badges.Any())
                                            {
                                                <div class="showtime-badges">
                                                    @foreach (var badge in showtime.Badges)
                                                    {
                                                        <span class="showtime-badge">@(!string.IsNullOrWhiteSpace(badge.Description) ? badge.Description : badge.Code)</span>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private readonly Dictionary<int, Movie> movieDetails = new();
    private List<Schedule>? schedules;
    private List<Schedule>? allSchedules;
    private string searchQuery = string.Empty;
    private CancellationTokenSource? searchCts;
    private List<BadgeOption> badgeOptions = new();
    private HashSet<string> activeBadgeCodes = new(StringComparer.OrdinalIgnoreCase);
    private int? selectedMovieId;
    private Schedule? selectedSchedule;
    private Movie? selectedMovie;

    protected override async Task OnInitializedAsync()
    {
        allSchedules = await MovieService.GetTodaysSchedules();
        await EnsureMovieDetailsAsync(allSchedules);
        UpdateBadgeFilters(allSchedules);
        ApplyFilters();
    }

    private async Task OnSearchInput(ChangeEventArgs e)
    {
        searchQuery = e?.Value?.ToString() ?? string.Empty;

        searchCts?.Cancel();
        searchCts?.Dispose();
        searchCts = new CancellationTokenSource();
        var token = searchCts.Token;

        try
        {
            await Task.Delay(350, token);
        }
        catch (TaskCanceledException)
        {
            return;
        }

        await PerformSearchAsync(searchQuery);
        searchCts?.Dispose();
        searchCts = null;
    }

    private async Task PerformSearchAsync(string query)
    {
        allSchedules = await MovieService.SearchTodaysSchedules(query);
        await EnsureMovieDetailsAsync(allSchedules);
        UpdateBadgeFilters(allSchedules);
        ApplyFilters();
    }

    private void OnBadgeToggle(string code, ChangeEventArgs e)
    {
        var isChecked = IsCheckboxChecked(e);

        if (isChecked)
        {
            activeBadgeCodes.Add(code);
        }
        else
        {
            activeBadgeCodes.Remove(code);
        }

        ApplyFilters();
    }

    private async Task EnsureMovieDetailsAsync(List<Schedule>? dataset)
    {
        if (dataset == null || dataset.Count == 0)
        {
            return;
        }

        var missingIds = dataset
            .Select(schedule => schedule.MovieId)
            .Where(id => id > 0 && !movieDetails.ContainsKey(id))
            .Distinct()
            .ToList();

        if (missingIds.Count == 0)
        {
            return;
        }

        var fetched = await MovieService.GetMoviesByIdsAsync(missingIds);

        foreach (var kvp in fetched)
        {
            movieDetails[kvp.Key] = kvp.Value;
        }
    }

    private Movie? LookupMovie(int movieId)
    {
        if (movieDetails.TryGetValue(movieId, out var movie))
        {
            return movie;
        }

        return null;
    }

    private void OnCardKeyDown(KeyboardEventArgs args, int movieId)
    {
        if (args == null)
        {
            return;
        }

        if (args.Key.Equals("Enter", StringComparison.OrdinalIgnoreCase) ||
            args.Key.Equals(" ", StringComparison.Ordinal) ||
            args.Key.Equals("Space", StringComparison.OrdinalIgnoreCase))
        {
            HandleScheduleActivation(movieId);
        }
    }

    private void HandleScheduleActivation(int movieId)
    {
        if (selectedMovieId == movieId)
        {
            CloseScheduleModal();
            return;
        }

        OpenScheduleModal(movieId);
    }

    private void OpenScheduleModal(int movieId)
    {
        var matchingSchedule = schedules?.FirstOrDefault(s => s.MovieId == movieId)
            ?? allSchedules?.FirstOrDefault(s => s.MovieId == movieId);

        if (matchingSchedule == null)
        {
            CloseScheduleModal();
            return;
        }

        selectedMovieId = movieId;
        selectedSchedule = matchingSchedule;
        selectedMovie = LookupMovie(movieId);
    }

    private void CloseScheduleModal()
    {
        selectedMovieId = null;
        selectedSchedule = null;
        selectedMovie = null;
    }

    private static bool IsCheckboxChecked(ChangeEventArgs args)
    {
        return args?.Value switch
        {
            bool boolean => boolean,
            string text when text.Equals("on", StringComparison.OrdinalIgnoreCase) => true,
            string text when bool.TryParse(text, out var parsed) => parsed,
            _ => false
        };
    }

    private void UpdateBadgeFilters(List<Schedule>? dataset)
    {
        var discovered = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);

        if (dataset != null)
        {
            foreach (var schedule in dataset)
            {
                foreach (var performance in schedule.Performances)
                {
                    foreach (var showtime in performance.Showtimes)
                    {
                        foreach (var badge in showtime.Badges)
                        {
                            if (string.IsNullOrWhiteSpace(badge.Code))
                            {
                                continue;
                            }

                            if (!discovered.ContainsKey(badge.Code))
                            {
                                discovered[badge.Code] = string.IsNullOrWhiteSpace(badge.Description)
                                    ? badge.Code
                                    : badge.Description;
                            }
                        }
                    }
                }
            }
        }

        if (!discovered.Any())
        {
            badgeOptions.Clear();
            activeBadgeCodes.Clear();
            return;
        }

        if (activeBadgeCodes.Count == 0)
        {
            foreach (var code in discovered.Keys)
            {
                activeBadgeCodes.Add(code);
            }
        }
        else
        {
            activeBadgeCodes.RemoveWhere(code => !discovered.ContainsKey(code));
            foreach (var code in discovered.Keys)
            {
                if (!activeBadgeCodes.Contains(code))
                {
                    activeBadgeCodes.Add(code);
                }
            }
        }

        badgeOptions = discovered
            .Select(kvp => new BadgeOption { Code = kvp.Key, Label = kvp.Value })
            .OrderBy(option => option.Label, StringComparer.OrdinalIgnoreCase)
            .ToList();
    }

    private void ApplyFilters()
    {
        if (allSchedules == null)
        {
            schedules = null;
            CloseScheduleModal();
            return;
        }

        if (!badgeOptions.Any() || activeBadgeCodes.Count == badgeOptions.Count)
        {
            schedules = allSchedules;
            EnsureSelectedScheduleStillVisible();
            return;
        }

        var disallowed = new HashSet<string>(badgeOptions.Select(option => option.Code), StringComparer.OrdinalIgnoreCase);
        disallowed.ExceptWith(activeBadgeCodes);

        var filtered = new List<Schedule>();

        foreach (var schedule in allSchedules)
        {
            var filteredPerformances = new List<Performance>();

            foreach (var performance in schedule.Performances)
            {
                var filteredShowtimes = performance.Showtimes
                    .Where(showtime => !showtime.Badges.Any(badge => disallowed.Contains(badge.Code)))
                    .ToList();

                if (filteredShowtimes.Any())
                {
                    filteredPerformances.Add(new Performance
                    {
                        VenueId = performance.VenueId,
                        Venue = performance.Venue,
                        Showtimes = filteredShowtimes
                    });
                }
            }

            if (filteredPerformances.Any())
            {
                filtered.Add(new Schedule
                {
                    Id = schedule.Id,
                    MovieId = schedule.MovieId,
                    Date = schedule.Date,
                    MovieTitle = schedule.MovieTitle,
                    Performances = filteredPerformances,
                    StoredAt = schedule.StoredAt
                });
            }
        }

        schedules = filtered;
        EnsureSelectedScheduleStillVisible();
    }

    private void EnsureSelectedScheduleStillVisible()
    {
        if (!selectedMovieId.HasValue)
        {
            return;
        }

        if (schedules == null)
        {
            CloseScheduleModal();
            return;
        }

        var schedule = schedules.FirstOrDefault(s => s.MovieId == selectedMovieId.Value);

        if (schedule == null)
        {
            CloseScheduleModal();
            return;
        }

        selectedSchedule = schedule;
        selectedMovie = LookupMovie(schedule.MovieId);
    }

    private static string BuildFallbackLabel(string title)
    {
        if (string.IsNullOrWhiteSpace(title))
        {
            return "?";
        }

        var trimmed = title.Trim();

        if (trimmed.Length == 0)
        {
            return "?";
        }

        var first = char.ToUpperInvariant(trimmed[0]);
        char? second = null;

        for (var i = 1; i < trimmed.Length && !second.HasValue; i++)
        {
            if (char.IsWhiteSpace(trimmed[i - 1]) && char.IsLetterOrDigit(trimmed[i]))
            {
                second = char.ToUpperInvariant(trimmed[i]);
            }
        }

        return second.HasValue ? $"{first}{second.Value}" : first.ToString();
    }

    private static string BuildBackdropStyle(Movie? movie)
    {
        if (movie == null || string.IsNullOrWhiteSpace(movie.BackdropUrl))
        {
            return string.Empty;
        }

        var safeUrl = movie.BackdropUrl.Replace("'", "%27", StringComparison.Ordinal);
        return $"background-image: url('{safeUrl}')";
    }

    private sealed class BadgeOption
    {
        public string Code { get; init; } = string.Empty;
        public string Label { get; init; } = string.Empty;
    }
}