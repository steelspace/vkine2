@page "/movies"
@rendermode InteractiveServer

<PageTitle>Movies</PageTitle>

<div class="movies-container">
    <h1 class="movies-title">Movies</h1>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>Loading movies...</p>
        </div>
    }
    else if (movies == null || movies.Count == 0)
    {
        <div class="no-movies">
            <p>No movies available.</p>
        </div>
    }
    else
    {
        <div class="movies-stats">
            <p>Showing @movies.Count movies</p>
        </div>

        <div class="movies-grid">
            @foreach (var movie in movies)
            {
                <div class="movie-card" @onclick="() => OpenModal(movie)">
                    <div class="movie-poster">
                        @if (!string.IsNullOrEmpty(movie.CoverUrl))
                        {
                            <img src="@movie.CoverUrl" alt="@movie.Title" />
                        }
                        else
                        {
                            <div class="no-poster">
                                <span>No Image</span>
                            </div>
                        }
                    </div>
                    <div class="movie-info">
                        <h3 class="movie-title">@movie.Title</h3>
                        @if (movie.OriginCountries.Count > 0)
                        {
                            <p class="movie-countries">@string.Join(", ", movie.OriginCountries)</p>
                        }
                    </div>
                </div>
            }
        </div>

        @if (_hasMore)
        {
            <div class="load-more-container">
                <button class="btn-load-more" @onclick="LoadMoreMovies" disabled="@isLoadingMore">
                    @if (isLoadingMore)
                    {
                        <span>Loading...</span>
                    }
                    else
                    {
                        <span>Load More</span>
                    }
                </button>
            </div>
        }
    }

</div>

<MovieModal IsOpen="@isModalOpen" Movie="@selectedMovie" OnClose="@CloseModal" />
