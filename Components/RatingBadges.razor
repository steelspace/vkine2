@inject IStringLocalizer<RatingBadges> Localizer

@if (Movie.Id > 0)
{
    <a href="https://www.csfd.cz/film/@Movie.Id" target="_blank" class="rating-badge csfd @(Compact ? "compact" : "")" @onclick:stopPropagation title="@Localizer["CsfdRatingTitle"]">
        <span class="rating-source">ÄŒSFD</span>
        @if (!string.IsNullOrEmpty(Movie.CsfdRating))
        {
            <span class="rating-value">@Movie.CsfdRating</span>
        }
    </a>
}
@if (Movie.TmdbId.HasValue)
{
    <a href="https://www.themoviedb.org/movie/@Movie.TmdbId" target="_blank" class="rating-badge tmdb @(Compact ? "compact" : "")" @onclick:stopPropagation title="@Localizer["TmdbRatingTitle"]">
        <span class="rating-source">TMDB</span>
        @if (Movie.TmdbRating.HasValue)
        {
            <span class="rating-value">@Movie.TmdbRating.Value.ToString("0.#")</span>
        }
    </a>
}
@if (!string.IsNullOrEmpty(Movie.ImdbId))
{
    <a href="https://www.imdb.com/title/@Movie.ImdbId" target="_blank" class="rating-badge imdb @(Compact ? "compact" : "")" @onclick:stopPropagation title="@(Movie.ImdbRatingCount.HasValue ? Localizer["ImdbRatingWithVotes", Movie.ImdbRatingCount.Value] : Localizer["ViewOnImdb"])">
        <span class="rating-source">IMDb</span>
        @if (Movie.ImdbRating.HasValue)
        {
            <span class="rating-value">@Movie.ImdbRating.Value.ToString("0.#")</span>
        }
    </a>
}
